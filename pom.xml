	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kuali.student.poc</groupId>
	<artifactId>ks-poc-rice-war</artifactId>
	<packaging>war</packaging>
	<name>KS POC Big War</name>
	<version>0.0.1-SNAPSHOT</version>
	<description />

	<!-- Using ks-parent-pom to get all dependencyManagement stuff -->
	<parent>
		<groupId>org.kuali.student.poc.common</groupId>
		<artifactId>ks-parent-pom</artifactId>
		<version>0.0.3-SNAPSHOT</version>
	</parent>

