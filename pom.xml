	<!-- Override parent pom cxf version to use latest snapshot -->
	<properties>
		<cxf.version>2.1.3-SNAPSHOT</cxf.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<overlays>
						<!-- Rice War -->
						<overlay>
							<groupId>org.kuali.rice</groupId>
							<artifactId>rice-web</artifactId>
							<excludes>
								<!--  
									Exlude all rice jars, instead get these by adding dependency to
									rice web pom. This way depedencyManagement can resolve artifact 
									conflicts. 
								-->
								<exclude>WEB-INF/lib/*.jar</exclude>
							</excludes>
							<skip>false</skip>
						</overlay>

						<!-- Workflow War -->
						<overlay>
							<groupId>org.kuali.student.poc</groupId>
							<artifactId>ks-workflow</artifactId>
							<excludes>
								<exclude>WEB-INF/lib/*.jar</exclude>
								<exclude>WEB-INF/classes/*.xml</exclude>
								<exclude>
									WEB-INF/classes/config/*.xml
								</exclude>
							</excludes>
							<skip>false</skip>
						</overlay>

						<!-- GWT War -->
						<overlay>
							<groupId>
								org.kuali.student.poc.ks-poc-ui
							</groupId>
							<artifactId>ks-poc-ui</artifactId>
							<excludes>
								<exclude>
									WEB-INF/lib/cxf**,
									WEB-INF/lib/common-ws-**
								</exclude>
								<exclude>WEB-INF/lib/lu-api-**</exclude>
								<exclude>
									WEB-INF/lib/luipersonrelation-api-**
								</exclude>
								<exclude>
									WEB-INF/lib/personidentity-api-**
								</exclude>
								<exclude>
									WEB-INF/lib/org.kuali.student.**
								</exclude>
								<exclude>WEB-INF/lib/spring-**</exclude>
							</excludes>
							<skip>false</skip>
						</overlay>
					</overlays>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.7</version>
				<!-- 
					These libraries are needed for rice. Jetty requires that these
					be in container classpath, having them WEB-INF\lib doesn't work.
				-->
				<dependencies>
					<dependency>
						<groupId>taglibs</groupId>
						<artifactId>standard</artifactId>
						<version>1.1.2</version>
					</dependency>
					<dependency>
						<groupId>javax.servlet</groupId>
						<artifactId>jstl</artifactId>
						<version>1.1.2</version>
					</dependency>
				</dependencies>
				<configuration>
					<connectors>
						<connector
							implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>8181</port>
							<maxIdleTime>60000</maxIdleTime>
						</connector>
					</connectors>
					<webAppConfig>
						<!-- Appears contextPath only works for 6.1.7+ -->
						<contextPath>/ks</contextPath>
					</webAppConfig>
					<systemProperties>
						<systemProperty>
							<name>catalina.base</name>
							<value>target</value>
						</systemProperty>
						<systemProperty>
							<name>kew.bootstrap.spring.file</name>
							<value>ks-rice-beans.xml</value>
						</systemProperty>
					</systemProperties>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<configuration>
					<port>8181</port>
					<path>/ks</path>
					<warDirectory>
						${project.build.directory}/${project.build.finalName}
					</warDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.hibernate</groupId>
				<artifactId>hibernate</artifactId>
				<version>3.2.6.ga</version>
				<exclusions>
					<exclusion>
						<groupId>asm</groupId>
						<artifactId>asm-attrs</artifactId>
					</exclusion>
					<exclusion>
						<groupId>cglib</groupId>
						<artifactId>cglib</artifactId>
					</exclusion>
				</exclusions>
			</dependency>

			<dependency>
				<groupId>asm</groupId>
				<artifactId>asm</artifactId>
				<version>1.5.3</version>
			</dependency>

			<!-- Rice uses MultipartResolver (which isn't in 2.5.4 jar)  -->
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-web</artifactId>
				<version>2.0.4</version>
			</dependency>

			<!--  Spring-jpa, used by rice, has been replaced with spring-orm 2.5.4-->
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-jpa</artifactId>
				<version>2.0.4</version>
				<scope>provided</scope>
			</dependency>

		</dependencies>
	</dependencyManagement>

