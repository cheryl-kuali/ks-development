<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ks-ui-kitchen-sink</groupId>
	<artifactId>ks-ui-kitchen-sink</artifactId>
	<packaging>war</packaging>
	<name>KS UI Kitchen Sink</name>
	<version>0.0.1-SNAPSHOT</version>
	<description>
		Demonstrates preferred KS usage of GWT components, including
		components found in ks-commons-ui
	</description>

	<properties>
		<google.webtoolkit.extrajvmargs>
			-Xmx512m
		</google.webtoolkit.extrajvmargs>
	</properties>

	<parent>
		<!--  TODO point to official parent pom, whenever we make one -->
		<groupId>org.kuali.student.poc</groupId>
		<artifactId>ks-parent-pom</artifactId>
		<version>0.0.2</version>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>com.totsp.gwt</groupId>
				<artifactId>maven-googlewebtoolkit2-plugin</artifactId>
				<version>2.0-beta20</version>
				<executions>
					<execution>
						<goals>
							<goal>setup</goal>
							<goal>extractGwt</goal>
							<goal>mergewebxml</goal>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<gwtVersion>1.5.0-rc1</gwtVersion>
					<logLevel>INFO</logLevel>
					<!-- defines which page should be launched when run in hosted mode -->
					<runTarget>
						org.kuali.student.ui.kitchensink.KitchenSink/KitchenSink.html
					</runTarget>

					<!-- define which GWT modules get compiled during the build process -->
					<compileTargets>
						<param>
							org.kuali.student.ui.kitchensink.KitchenSink
						</param>
						<!-- add any other GWT modules in your project that are required -->
					</compileTargets>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<webXml>target/web.xml</webXml>
					<!-- 
					<webResources>
						<resource>
							<directory>src/main/java</directory>
						</resource>
					</webResources>
					 -->
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<version>1.5.0-rc1</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-dev</artifactId>
			<version>1.5-RC1</version>
			<scope>provided</scope>
			<classifier>${ks.os.classifier}</classifier>
		</dependency>

		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-servlet</artifactId>
			<version>1.5.0-rc1</version>
			<exclusions>
				<exclusion>
					<artifactId>junit</artifactId>
					<groupId>com.google.gwt</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>org.kuali.student.commons</groupId>
			<artifactId>ks-commons-ui</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<classifier>sources</classifier>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>org.kuali.student.commons</groupId>
			<artifactId>ks-commons-ui</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>

	</dependencies>


	<profiles>
		<profile>
			<id>ks.ui.external.repositories</id>
			<activation>
				<property>
					<name>!ks.use.proxy</name>
				</property>
			</activation>

			<repositories>
				<repository>
					<id>gwt-maven</id>
					<url>
						http://gwt-maven.googlecode.com/svn/trunk/mavenrepo
					</url>
				</repository>
				<repository>
					<id>kuali.external-free</id>
					<url>
						http://kuali.umd.edu/archiva/repository/external-free
					</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
			</repositories>

			<pluginRepositories>
				<pluginRepository>
					<id>gwt-maven</id>
					<url>
						http://gwt-maven.googlecode.com/svn/trunk/mavenrepo
					</url>
				</pluginRepository>
			</pluginRepositories>
		</profile>

		<profile>
			<id>ks.os.linux</id>
			<activation>
				<os>
					<name>linux</name>
				</os>
			</activation>
			<properties>
				<ks.os.classifier>linux</ks.os.classifier>
			</properties>
		</profile>

		<profile>
			<id>ks.os.windows</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<ks.os.classifier>windows</ks.os.classifier>
			</properties>
		</profile>
	</profiles>

	<repositories>
		<repository>
			<id>kuali.release</id>
			<url>http://kuali.umd.edu/archiva/repository/release</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>kuali.snapshot</id>
			<url>http://kuali.umd.edu/archiva/repository/snapshot</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>

</project>