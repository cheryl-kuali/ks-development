    <bean id="KS-AppliedHoldManagementView" parent="KS-Uif-FormView">
        <property name="singlePageView" value="true"/>
        <property name="header.render" value="true"/>
        <property name="headerText" value="Applied Holds@{personHeaderInfo}"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.enrollment.class1.hold.service.impl.HoldsViewHelperServiceImpl"/>
        <property name="formClass"
                  value="org.kuali.student.enrollment.class1.hold.form.AppliedHoldManagementForm"/>
        <property name="page">
            <bean id="KS-AppliedHold-SearchInput-Page" parent="KS-AppliedHold-SearchInput-Page-parent"/>
        </property>
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-Enrollment"/>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="url.controllerMapping" value="appliedHoldManagement"/>
                    <property name="url.requestParameters">
                        <map key-type="java.lang.String" merge="true">
                            <entry key="methodToCall" value="start"/>
                            <entry key="hideReturnLink" value="true"/>
                            <entry key="viewName" value="AppliedHoldManagementView"/>
                            <entry key="formKey" value="@{returnFormKey}"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>themes/ksboot/stylesheets/holds.css</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>themes/ksboot/scripts/toolbar.js</value>
                <value>themes/ksboot/scripts/krad.utility.js</value>
            </list>
        </property>
    </bean>

    <!--p:disclosure.render="false"-->
    <bean id="KS-AppliedHold-SearchInput-Page-parent" parent="KS-Uif-Page" >
        <property name="items">
            <list>
                <ref bean="KS-AppliedHold-CriteriaSection"/>
                <ref bean="KS-Hold-ToolBarSection"/>
                <ref bean="KS-AppliedHold-SearchResults"/>
            </list>
        </property>
        <property name="footer">
            <bean parent="KS-Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-HorizontalBoxGroup">
                            <property name="items">
                                <list>
                                    <bean parent="KS-Uif-NavigationActionLink" p:ajaxSubmit="false"
                                          p:methodToCall="cancel" p:actionLabel="Cancel"
                                          p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CANCEL]}"/>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KS-AppliedHold-CriteriaSection" parent="Uif-HorizontalBoxSection" >
        <property name="validationMessages" ref="KS-ValidationMessages-Off"/>
        <property name="items">
            <list>
                <bean parent="KS-Uif-InputField-LabelLeft" p:propertyName="person.id"
                    p:label="Student ID" p:readOnly="false" p:id="studentIdField">
                    <property name="control">
                    <bean parent="KS-Uif-TextControl" p:size="12" p:maxLength="40"/>
                    </property>
                </bean>
                <bean parent="KS-Uif-SecondaryActionButton" p:performClientSideValidation="false"
                    p:actionLabel="Show" p:methodToCall="search" p:id="show_button"/>
            </list>
        </property>
    </bean>

    <bean id="KS-Hold-ToolBarSection" parent="KS-Uif-HorizontalBoxSection-ToolbarSection" p:render="@{validPerson}">
        <property name="items">
            <list>
                <bean parent="KS-Uif-HorizontalBoxGroup-ToolbarGroup" p:noLeftBorder="true">
                    <property name="items">
                        <list>
                            <bean id="KS-Hold-ToolBar-Add-Applied-Hold" parent="KS-Hold-ToolBar-Add-parent" p:methodToCall="applyHold" p:disabled="false"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-Hold-ToolBar-Add-parent" parent="KS-Uif-ToolBar-Button">
        <property name="actionLabel" value="Apply New Hold"/>
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="" p:cssClasses="ks-fontello-icon-plus-1"/>
        </property>
    </bean>

    <bean id="KS-AppliedHold-ResultSection" parent="Uif-TableCollectionSubSection" p:renderLineActions="true">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class1.hold.form.AppliedHoldResult"/>
        <property name="propertyName" value="holdResultList"/>
        <property name="layoutManager.richTable">
            <bean parent="KS-Uif-RichTable"/>
        </property>
        <property name="layoutManager.richTable.render" value="true"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="layoutManager.applyDefaultCellWidths" value="false"/>
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="opir"/>
                <entry key="aaSorting" value="[[0, 'asc']]"/>
                <entry key="bPaginate" value="false"/>
                <entry key="bAutoWidth" value="true"/>
                <entry key="bInfo" value="true"/>
            </map>
        </property>
        <property name="renderAddLine" value="false"/>
    </bean>

    <bean id="KS-AppliedHold-SearchResults" parent="KS-AppliedHold-ResultSection"
          p:propertyName="holdResultList">
        <property name="headerText" value=""/>
        <property name="lineActions">
            <list>
                <bean id="manageHoldEditLink" parent="KS-Uif-Edit-NavigationActionLink" p:methodToCall="edit"
                      p:iconClass="ks-fontello-icon-pencil" p:style="color:#0088CC;"/>
                <bean id="manageHoldDeleteLink" parent="KS-Uif-Delete-NavigationActionLink" p:methodToCall="delete"
                      p:iconClass="ks-fontello-icon-cancel"
                      p:style="color:#0088CC;"/>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="KS-Uif-DataField" p:label="Applied Hold" p:propertyName="holdName" p:style="white-space:nowrap;"/>
                <bean parent="KS-Uif-DataField" p:label="Hold Code" p:propertyName="code" p:additionalCssClasses="nowrap"/>
                <bean parent="KS-Uif-InputField" p:label="Category" p:propertyName="typeKey" p:readOnly="true"
                      p:style="width:50%;white-space:nowrap;">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean id="HoldIssueTypes"
                              class="org.kuali.student.enrollment.class1.hold.keyvalues.HoldIssueTypeKeyValues"/>
                    </property>
                </bean>
                <bean parent="KS-Uif-DataField" p:label="Consequence" p:propertyName="consequence" p:style="width:350px;"/>
                <bean parent="KS-Uif-InputField" p:label="State" p:propertyName="state" p:readOnly="true"/>
                <bean parent="KS-Uif-DataField" p:label="Start Date" p:propertyName="startDate" p:additionalCssClasses="nowrap"/>
                <bean parent="KS-Uif-DataField" p:label="End Date" p:propertyName="endDate" p:additionalCssClasses="nowrap" p:style="min-width:56px;"/>
                <bean parent="KS-Uif-DataField" p:label="Start Term" p:propertyName="startTerm" p:additionalCssClasses="nowrap"/>
                <bean parent="KS-Uif-DataField" p:label="End Term" p:propertyName="endTerm" p:additionalCssClasses="nowrap" p:style="min-width:56px;"/>
            </list>
        </property>
    </bean>

</beans>