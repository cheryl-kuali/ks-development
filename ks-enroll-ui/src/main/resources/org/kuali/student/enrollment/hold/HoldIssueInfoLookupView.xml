<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <import resource="classpath:ks-HoldIssueInfo-dictionary.xml"/>

    <bean id="KS-HoldIssueInfo-LookupView" parent="KS-Uif-LookupView">
        <property name="id" value="holdIssueInfoLookupView"/>
        <property name="headerText" value="Active Hold Lookup"/>
        <property name="dataObjectClassName" value="org.kuali.student.r2.core.hold.dto.HoldIssueInfo"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class1.hold.service.HoldIssueLookupableImpl"/>
        <property name="additionalCssFiles">
            <list merge="true">
                <value>themes/ksboot/stylesheets/admin-registration.css</value>
            </list>
        </property>
        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="holdCode" p:label="Hold Code"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="name" p:label="Hold Name"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="typeKey" p:label="Hold Category" p:style="width:245px">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class1.hold.keyvalues.HoldIssueTypeKeyValues"/>
                    </property>
                </bean>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="orgName" p:label="Owning Organization">
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder">
                            <property name="dataObjectClassName" value="org.kuali.student.r2.core.organization.dto.OrgInfo"/>
                            <property name="fieldConversions">
                                <map>
                                    <entry key="id" value="organizationId"/>
                                    <entry key="shortName" value="orgName"/>
                                </map>
                            </property>
                        </bean>
                    </property>
                </bean>

            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="KS-Uif-DataField" p:propertyName="code" p:label="Hold Code"/>
                <bean parent="KS-Uif-DataField" p:propertyName="name" p:label="Hold Name"/>
                <bean parent="KS-Uif-InputField" p:label="Hold Category" p:propertyName="typeKey"
                      p:readOnly="true" p:additionalCssClasses="nowrap"  p:style="width:50%;">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class1.hold.keyvalues.HoldIssueTypeKeyValues"/>
                    </property>
                </bean>
                <bean parent="KS-Uif-DataField" p:label="State" p:propertyName="state" p:additionalCssClasses="nowrap"/>
            </list>
        </property>
    </bean>

</beans>