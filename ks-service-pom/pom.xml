<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kuali.student.poc.common</groupId>
	<artifactId>ks-service-pom</artifactId>
	<packaging>pom</packaging>
	<version>0.1.0-SNAPSHOT</version>
	<name>KS POC Service POM</name>
	<description>Kuali Student POC Services-RI Parent POM</description>

	<parent>
		<groupId>org.kuali.student.poc.common</groupId>
		<artifactId>ks-parent-pom</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.kuali.student.poc.common</groupId>
			<artifactId>common-ws</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.kuali.student.poc.common</groupId>
			<artifactId>common-util</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>

		<!-- 
			Note: common-test can't be included as a dependency here. The common-test 
			pom inherits from this pom and would result in circular dependency, 
			therefore it must be added as dependencies in each child pom.  
		-->

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-aspects</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-jdbc</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
		</dependency>


		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
		</dependency>

		<dependency>
			<groupId>javax.persistence</groupId>
			<artifactId>persistence-api</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.transaction</groupId>
			<artifactId>jta</artifactId>
		</dependency>

		<dependency>
			<groupId>atomikos</groupId>
			<artifactId>transactions-jta</artifactId>
		</dependency>
		<dependency>
			<groupId>atomikos</groupId>
			<artifactId>transactions-jdbc</artifactId>
		</dependency>
		<dependency>
			<groupId>atomikos</groupId>
			<artifactId>transactions-api</artifactId>
		</dependency>
		<dependency>
			<groupId>atomikos</groupId>
			<artifactId>transactions</artifactId>
		</dependency>
		<dependency>
			<groupId>atomikos</groupId>
			<artifactId>atomikos-util</artifactId>
		</dependency>

		<dependency>
			<groupId>org.mortbay.jetty</groupId>
			<artifactId>jetty</artifactId>
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<id>eclipselink</id>
			<activation>
				<property>
					<name>ks.use.eclipselink</name>
				</property>
			</activation>

			<properties>
				<jpa.impl>eclipselink</jpa.impl>
				<jpa.vendorAdapter>
					org.springframework.orm.jpa.vendor.EclipseLinkJpaVendorAdapter
				</jpa.vendorAdapter>
				<jpa.databasePlatform>
					org.eclipse.peristence.platform.database.DerbyPlatform
				</jpa.databasePlatform>
			</properties>

			<dependencies>
				<dependency>
					<groupId>org.eclipse.persistence</groupId>
					<artifactId>eclipselink</artifactId>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>hibernate</id>
			<activation>
				<property>
					<name>!ks.use.eclipselink</name>
				</property>
			</activation>

			<properties>
				<jpa.impl>hibernate</jpa.impl>
				<jpa.vendorAdapter>
					org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter
				</jpa.vendorAdapter>
				<jpa.databasePlatform>
					org.hibernate.dialect.DerbyDialect
				</jpa.databasePlatform>
			</properties>

			<dependencies>
				<dependency>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate-annotations</artifactId>
					<version>3.3.1.GA</version>
				</dependency>
				<dependency>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate-entitymanager</artifactId>
					<version>3.3.2.GA</version>
				</dependency>
				<dependency>
					<groupId>atomikos</groupId>
					<artifactId>transactions-hibernate3</artifactId>
					<version>${atomikos.version}</version>
				</dependency>
				<dependency>
					<groupId>cglib</groupId>
					<artifactId>cglib-nodep</artifactId>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>cxf</id>
			<activation>
				<property>
					<name>!ks.use.jaxws</name>
				</property>
			</activation>

			<properties>
				<ws.engine>cxf</ws.engine>
				<ws.servlet>
					org.apache.cxf.transport.servlet.CXFServlet
				</ws.servlet>
			</properties>

			<dependencies>
				<dependency>
					<groupId>org.kuali.student.poc.common</groupId>
					<artifactId>common-cxf</artifactId>
					<version>0.1.0-SNAPSHOT</version>
				</dependency>
				<dependency>
					<groupId>org.apache.cxf</groupId>
					<artifactId>cxf-rt-frontend-jaxws</artifactId>
				</dependency>

				<dependency>
					<groupId>org.apache.cxf</groupId>
					<artifactId>cxf-rt-transports-http</artifactId>
				</dependency>

				<!-- 
					Need this? I swear we did to include some cxf spring context file.
					Commenting out for now b/c it has dependency to geronimo-servlet_2.5_spec,
					which Tomcat complains about.
					
					<dependency>
					<groupId>org.apache.cxf</groupId>
					<artifactId>
					cxf-rt-transports-http-jetty
					</artifactId>
					</dependency>
				-->

				<dependency>
					<groupId>cglib</groupId>
					<artifactId>cglib-nodep</artifactId>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>jaxws</id>
			<activation>
				<property>
					<name>ks.use.jaxws</name>
				</property>
			</activation>

			<properties>
				<ws.servlet>
					com.sun.xml.ws.transport.http.servlet.WSSpringServlet
				</ws.servlet>
				<ws.engine>jaxws</ws.engine>
			</properties>

			<dependencies>
				<dependency>
					<groupId>org.kuali.student.poc.common</groupId>
					<artifactId>common-metro</artifactId>
					<version>0.1.0-SNAPSHOT</version>
				</dependency>

				<dependency>
					<groupId>com.sun.xml.ws</groupId>
					<artifactId>webservices-rt</artifactId>
				</dependency>
				<dependency>
					<groupId>org.jvnet.jax-ws-commons.spring</groupId>
					<artifactId>jaxws-spring</artifactId>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemProperties>
								<property>
									<name>ks.use.jaxws</name>
									<value>true</value>
								</property>
							</systemProperties>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>