	<name>Kuali Student BRMS - UI for developers</name>
	<description>
		GUI used by developers to develop, test and troubleshoot rules in BRMS system
	</description>
	<build>
		<plugins>
			<plugin>
				<groupId>com.totsp.gwt</groupId>
				<artifactId>maven-googlewebtoolkit2-plugin</artifactId>
				<version>2.0-beta20</version>
				<executions>
					<execution>
						<goals>
							<goal>setup</goal>
							<goal>extractGwt</goal>
							<goal>mergewebxml</goal>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<gwtVersion>1.5.0-rc1</gwtVersion>
					<logLevel>INFO</logLevel>
					<!-- defines which page should be launched when run in hosted mode -->
					<runTarget>
						org.kuali.student.rules.devgui.DevelopersGui/DevelopersGui.html
					</runTarget>
					<!-- define which GWT modules get compiled during the build process -->
					<compileTargets>
						<param>
							org.kuali.student.rules.devgui.DevelopersGui
						</param>
						<!--
						<param>
							org.kuali.student.commons.ui.Logging
						</param>
						<param>
							org.kuali.student.commons.ui.Messages
						</param>
						<param>
							org.kuali.student.commons.ui.MVC
						</param>
						<param>
							org.kuali.student.commons.ui.PropertyChangeSupport
						</param>
						<param>
							org.kuali.student.commons.ui.UICommons
						</param>
						<param>
							org.kuali.student.commons.ui.Utilities
						</param>
						<param>
							org.kuali.student.commons.ui.Validators
						</param>
						<param>
							org.kuali.student.commons.ui.ViewMetaData
						</param>
						<param>
							org.kuali.student.commons.ui.Widgets
						</param>
						 -->
						<!-- add any other GWT modules in your project that are required -->
					</compileTargets>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<webXml>target/web.xml</webXml>
				</configuration>
			</plugin>
		</plugins>
	</build>

