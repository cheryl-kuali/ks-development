<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="CM-Proposal-Course-Retire-Start-Page" parent="KS-Uif-Page">
        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-CurriculumManagement"/>
                <ref bean="CM-HomewardPathBreadcrumbs-RetireCourseStart-Page"/>
            </list>
        </property>

        <property name="items">
            <list>
                <ref bean="CM-Proposal-Course-Retire-Start-Widgets"/>
            </list>
        </property>
        <property name="footer">
            <bean parent="CM-Proposal-Course-Retire-Start-Footer"/>
        </property>
    </bean>

    <bean id="CM-Proposal-Course-Retire-Start-View" parent="KS-Uif-FormView">
        <property name="id" value="startAdminRetireCourseView"/>
        <property name="header.headerText" value="Retire Course "/>
        <property name="header.headerLevel" value="h2"/>
        <property name="header.style" value="font-weight:bold;"/>
        <property name="formClass" value="org.kuali.student.cm.course.form.StartRetireCourseForm"/>
        <property name="viewSourceFile" value="StartAdminRetireCourseView.xml" /> <!-- Shows up in HTML so devs can find the code -->
        <property name="items">
            <list>
                <ref bean="CM-Proposal-Course-Retire-Start-Page"/>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Course-Retire-Start-Widgets" parent="Uif-VerticalBoxSection">
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
        <property name="cssClasses">
            <list>
                <value>ks-cm-create-course-message-text</value>
            </list>
        </property>
        <property name="headerText" value="Which type of retire action do you want?"/>
        <property name="items">
            <list>
                <bean parent="KS-Uif-InputField" id="CM-Proposal-Course-RetireOption" p:propertyName="startRetireCourseAction"
                      p:required="true" p:bindingInfo.bindToForm="true" p:defaultValue="startAdministrativeRetire"
                      p:style="line-height: 200%;margin-top: 8px">
                    <property name="control">
                        <bean parent="KS-Uif-VerticalRadioControl">
                            <property name="options">
                                <list>
                                    <bean id="CM-Proposal-Course-RetireOptions-Admin" parent="Uif-KeyLabelPair" p:key="startAdministrativeRetire"  p:value="Administrative Retire" />
                                    <bean id="CM-Proposal-Course-RetireOptions" parent="Uif-KeyLabelPair" p:key="startRetireByProposal"  p:value="Retire By Proposal" />
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Course-Retire-Start-Footer" parent="Uif-FooterBase">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="items">
                        <list>
                            <bean id="CM-Proposal-Course-Retire-ContinueRetire"
                                  parent="Uif-PrimaryActionButton"
                                  p:ajaxSubmit="false"
                                  p:methodToCall="continueRetireCourse"
                                  p:actionLabel="Continue"/>
                            <bean id="CM-Proposal-Course-Retire-Cancel"
                                  parent="Uif-CancelAction"
                                  p:ajaxSubmit="false"
                                  p:methodToCall="cancel"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-HomewardPathBreadcrumbs-RetireCourseStart-Page" parent="Uif-BreadcrumbItem">
        <property name="label" value="Retire Course"></property>
    </bean>
</beans>
