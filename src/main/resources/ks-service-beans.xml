	<import resource="classpath:data-beans.xml" />

	<bean id="preloadBeans"
		class="org.kuali.student.poc.common.util.jpa.LoadJpaBeanListener">
		<property name="loadJpaBean">
			<bean
				class="org.kuali.student.poc.common.util.jpa.LoadJpaBean" />
		</property>
		<property name="preloadMap">
			<map>
				<entry key="Lu">
					<ref bean="luBeanPreloadList" />
				</entry>
				<entry key="Person">
					<ref bean="personBeanPreloadList" />
				</entry>
			</map>
		</property>
	</bean>

	<!-- GWT Service Aliases -->
	<alias alias="gwtLprService" name="lprServiceImpl" />
	<alias alias="gwtLuService" name="luServiceImpl" />
	<alias alias="gwtpersonService" name="personServiceImpl" />

</beans>