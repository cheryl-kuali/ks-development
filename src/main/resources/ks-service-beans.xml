	<!-- Web service deployed using ksb -->

	<bean id="KSWebService"
		class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition"
		abstract="true">
		<property name="serviceNameSpaceURI" value="KualiStudent" />
		<property name="priority" value="3" />
		<property name="retryAttempts" value="0" />
		<property name="busSecurity" value="false" />
		<property name="jaxWsService" value="true" />
	</bean>

	<bean class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="serviceDefinition">
			<bean parent="KSWebService">
				<property name="service" ref="personServiceImpl" />
				<!-- <property name="serviceNameSpaceURI" value="http://student.kuali.org/poc/wsdl/personidentity/person" /> -->
				<property name="localServiceName" value="PersonService" />
				<property name="serviceInterface"
					value="org.kuali.student.poc.wsdl.personidentity.person.PersonService" />

			</bean>
		</property>
	</bean>

	<bean class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="serviceDefinition">
			<bean parent="KSWebService">
				<property name="service" ref="luServiceImpl" />
				<!-- <property name="serviceNameSpaceURI" value="http://student.kuali.org/poc/wsdl/learningunit/lu" /> -->
				<property name="localServiceName" value="LuService" />
				<property name="serviceInterface"
					value="org.kuali.student.poc.wsdl.learningunit.lu.LuService" />
			</bean>
		</property>
	</bean>

	<bean class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="serviceDefinition">
			<bean parent="KSWebService">
				<property name="service" ref="lprServiceImpl" />
				<property name="localServiceName" value="LprService" />
				<property name="serviceInterface"
					value="org.kuali.student.poc.wsdl.learningunit.luipersonrelation.LuiPersonRelationService" />
			</bean>
		</property>
	</bean>


