	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kuali.student.brms</groupId>
	<artifactId>rules-common</artifactId>
	<name>Kuali Student BRMS - rules-common</name>
	<version>0.0.1-SNAPSHOT</version>
    <description>
        Rules common library. 
        This library is used internally by the rules modules.
        THIS MODULE SHOULD NOT BE USED OUTSIDE OF RULES. 
    </description>

	<parent>
		<groupId>org.kuali.student.brms</groupId>
		<artifactId>brms-ri</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>antlr3-maven-plugin</artifactId>
                <version>1.0</version>
                <configuration>
                    <outputDirectory>
                        src/main/java/org/kuali/student/rules/common/parsers
                    </outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>antlr</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

